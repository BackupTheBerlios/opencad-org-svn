<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
  <extension point="org.eclipse.ui.editors">
     <editor
           class="org.opencad.ui.editor.GLEditor"
           extensions="ocm"
           icon="icons/overview_obj.gif"
           id="org.opencad.core.editors.GLEditor"
           name="OpenGL Editor"/>
  </extension>
  <extension
        point="org.eclipse.ui.editorActions">
     <editorContribution
           id="org.opencad.core.addWallContribution"
           targetID="org.opencad.core.editors.GLEditor">
        <action
              class="org.opencad.modelling.walls.AddWallActionDelegate"
              id="org.opencad.core.addWallAction"
              label="New Wall"
              style="push"
              toolbarPath="GLEditor"/>
     </editorContribution>
     <editorContribution
           id="org.opencad.core.addWindowContribution"
           targetID="org.opencad.core.editors.GLEditor">
        <action
              class="org.opencad.modelling.window.AddWindowActionDelegate"
              id="org.opencad.core.addWindowAction"
              label="New Window"
              style="push"
              toolbarPath="GLEditor"/>
     </editorContribution>
  </extension>
  <extension
        id="product"
        point="org.eclipse.core.runtime.products">
     <product
           application="org.eclipse.ui.ide.workbench"
           name="OpenCad.org">
        <property
              name="aboutText"
              value="OpenCad.org&#x0A;Build, not draw&#x0A;&#x0A;Copyright Â© 2007 Silviu-Georgian Aprozeanu"/>
        <property
              name="startupProgressRect"
              value="0,10,420,10"/>
     </product>
  </extension>
  <extension
        point="org.eclipse.ui.views">
     <view
           allowMultiple="false"
           category="org.opencad.core.viewCategory"
           class="org.opencad.ui.view.GLView"
           id="org.opencad.core.glView"
           name="3D View"/>
     <category
           id="org.opencad.core.viewCategory"
           name="OpenCad.org"/>
  </extension>
</plugin>
